@model GitHubSearcher.ViewModels.gitHubDataViewModel


@{
    ViewBag.Title = "Main Page";
}
<title> Welcome </title>
<br />


@using (Html.BeginForm("GetAsync", "Home", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <form>
        <div class="form-row align-items-center">
            <div class="col-auto">
                <label class="sr-only" for="inlineFormInput">Name</label>
                <input type="text" class="form-control mb-2" name="searchString" id="inlineFormInput" placeholder="Search a Github Name...">
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </div>
    </form>
}
<br />
@{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.avatar_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.repos_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.location)
            </th>
        </tr>

        @if (Model != null)
        {
            <tr>
                <td>
                    @Model.User.avatar_url
                </td>

                <td>
                    @Model.User.repos_url
                </td>
                <th>
                    @Model.User.name
                </th>
                <td>
                    @Model.User.location
                </td>
            </tr>
        }
    </table>
    <br />
    <h2>Top 5 StarGazer</h2>
    if (Model != null)
    {
        <ul>
            @foreach (var repo in Model.Repo)
            {
                <li>@repo.stargazers_count</li>
                <li>@repo.description</li>
                <li>@repo.full_name</li>
                <li>@repo.name</li>
            }
        </ul>

    }
}
}

}




